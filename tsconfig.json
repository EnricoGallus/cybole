{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_preload/*": ["src/preload/*"],
      "_renderer/*": ["src/renderer/*"],
      "_types/*": ["src/types/*"],
      "_utils/*": ["src/utils/*"],
      "_tests/*": ["tests/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": ["src/**/*", "tests/**/*"]
}
